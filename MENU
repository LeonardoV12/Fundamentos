#include "stdafx.h"

#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
   int area1, area2, area3, opcion, base, altura, r;
   do {
     cout << endl;
     cout << "1.- Area de Triangulo" << endl;
     cout << "2.- Area de Rectangulo" << endl;
     cout << "3.- Area de cuadrado" << endl;
     cout << "0.- Salir" << endl;
     cout << "Elige una opciÃ³n: " ;
     cin >> opcion;
     cout << "Ingrese base: " ;
     cin >> base;
     cout << "Ingrese altura: " ;
     cin >> altura;
     switch (opcion) {
	    case 1: r = (base*altura)/2; break;
	    case 2: r = (base*altura); break;
	    case 3: r = (base*altura); break;
		case 0: cout << "Salir";break;
	    default: cout << "Opcion invalida" << endl;
     }
     if ((opcion>=1)&&(opcion<=4)) 
     	cout << "El resultado es " << r << endl;
   } while (opcion != 0);
   getch();
}
