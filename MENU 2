     cout << "2.- Hamburguesas con queso" << endl;
     cout << "3.- Papas fritas" << endl;
     cout << "4.- Sodas" << endl;
	 cout << "0.- Salir" << endl;
     cout << "Elige una opciÃ³n: " ;
     cin >> opcion;
     cout << "Ingrese la cantidad: " ;
